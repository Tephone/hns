<br>
<%= link_to '新しく投稿する', new_horse_diary_path%><br>
<%= search_form_for @q do |f| %>
  <%= f.label :content, "Keyword" %><br>
  <%= f.search_field :content_cont %>

  <%= f.submit "検索" %>
<% end %>
<% @horse_diaries.each do |diary|%>
  <%= diary.content%><br>
  <%= link_to '詳細', horse_diary_path(diary.id) %>
  <%= link_to '編集', edit_horse_diary_path(diary.id) %>
  <%= link_to '削除', horse_diary_path(diary.id), method: :delete, data: {confirm: '投稿を削除してもよろしいでしょうか？'} %><br>
<%end%>
<%= paginate @horse_diaries %>
