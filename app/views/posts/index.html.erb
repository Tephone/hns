
<%= link_to '新しく投稿する', new_post_path, class: 'btn-border-bottom'%><br><br>

  <% @posts.each do |post| %>
    <div rows: 12>
      <p><%= link_to safe_join(post.content.split("\n"),tag(:br)), post_path(post.id) %><br></p>
      <% if post.image.present? %>
        <p><%= image_tag post.image.url, class: "img-fluid" %></p><br>
      <% end %>
      <p class = "hr"></p>
      </div>
  <%end%>

<%= link_to 'マイページ', edit_user_registration_path(current_user.id) if current_user.name != 'gust' %> 

