<%= form_with(model: @post, local: true, url: new_or_edit_path?) do |f| %>
  <div class = "field">
    <%= f.label :投稿内容%><br>
    <%= f.text_area :content%>
  </div>
  <div class = "field">
    <%= f.label :画像%><br>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
