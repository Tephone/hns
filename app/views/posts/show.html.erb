<p> 
  <%= @post.user.name %>さんの投稿
</p>
<p> 
  <%= @post.content %>
</p>
<p> 
  <%= image_tag(@post.image.url) if @post.image.present? %>
</p>

<% if current_user == @post.user %>
  <%= link_to '編集', edit_post_path(@post.id) %>
  <%= link_to '削除', post_path(@post.id), method: :delete, data: {confirm: "投稿を削除してもよろしいでしょうか？"} %>
<% end %>

<% unless current_user == @post.user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入りを解除する', favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post %>
  <% end %>
<% end %>
<br>
<%= link_to '戻る', posts_path %>